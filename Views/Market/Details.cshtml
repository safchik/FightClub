@model FightClub.Models.Item

@{
    ViewData["Title"] = "Item Details";
}

<div class="container mt-5">
    <h2>@Model.Name</h2>
    <p><strong>Type:</strong> @Model.ItemType</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Attack:</strong> @Model.StatAttack</p>
    <p><strong>Defense:</strong> @Model.StatDefense</p>
    <p><strong>HP:</strong> @Model.StatHP</p>
    <p><strong>Price:</strong> @Model.Price gold</p>

    <form asp-controller="Basket" asp-action="AddToBasket" method="post">
        <input type="hidden" name="itemId" value="@Model.ItemId" />
        <button type="submit" class="btn btn-success">Add to Basket</button>
    </form>

    <a asp-controller="Market" asp-action="Index" class="btn btn-secondary mt-2">Back to Market</a>
</div>
