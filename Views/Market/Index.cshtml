@model IEnumerable<FightClub.Models.Item>

@{
    ViewData["Title"] = "Market";
    var gold = ViewBag.Gold ?? 0;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">@TempData["Success"]</div>
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🛒 Market</h2>
    <p class="text-center">Your gold: <strong>@gold</strong></p>

    <section class="jumbotron text-center">
        <div class="container">
            <p class="lead text-muted">
                Browse and purchase items for your fighter — weapons, armor, and potions to prepare for the next battle!
            </p>
            <p>
                <a asp-controller="Market" asp-action="Index" class="btn btn-outline-primary my-2">All Items</a>
                <a asp-controller="Market" asp-action="Index" asp-route-category="Weapon" class="btn btn-outline-success my-2">Weapons</a>
                <a asp-controller="Market" asp-action="Index" asp-route-category="Armor" class="btn btn-outline-warning my-2">Armor</a>
                <a asp-controller="Market" asp-action="Index" asp-route-category="Potion" class="btn btn-outline-info my-2">Potions</a>
            </p>
        </div>
    </section>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="col-lg-6 mb-4 mb-lg-0">
                        <img src="" alt="" class="img-fluid rounded" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: @item.Price</p>
                        <p class="card-text">Type: @item.ItemType</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <!-- View button opens modal -->
                                <button class="btn btn-sm btn-outline-secondary view-details"
                                        data-id="@item.ItemId">
                                    View
                                </button>

                                <!-- Add to Basket -->
                                <form asp-controller="Basket" asp-action="AddToBasket" method="post" class="d-inline">
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Add to Basket</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal for Item Details -->
<div class="modal fade" id="itemDetailsModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Item Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".view-details").on("click", function () {
                var itemId = $(this).data("id");

                $.get("/Market/Details/" + itemId, function (data) {
                    $("#modalContent").html(data);
                    $("#itemDetailsModal").modal("show");
                });
            });
        });
    </script>
}
