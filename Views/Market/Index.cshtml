@model IEnumerable<FightClub.Models.Item>

@{
    ViewData["Title"] = "Market";
}

<div class="container mt-4">
    <h2 class="mb-4">Market</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="https://via.placeholder.com/300x200" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: @item.Price</p>
                        <p class="card-text">Type: @item.ItemType</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <!-- View button opens modal -->
                                <button class="btn btn-sm btn-outline-secondary view-details"
                                        data-id="@item.ItemId">
                                    View
                                </button>

                                <!-- Add to Basket -->
                                <form asp-controller="Basket" asp-action="AddToBasket" method="post" class="d-inline">
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Add to Basket</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal for Item Details -->
<div class="modal fade" id="itemDetailsModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Item Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".view-details").on("click", function () {
                var itemId = $(this).data("id");

                $.get("/Market/Details/" + itemId, function (data) {
                    $("#modalContent").html(data);
                    $("#itemDetailsModal").modal("show");
                });
            });
        });
    </script>
}
