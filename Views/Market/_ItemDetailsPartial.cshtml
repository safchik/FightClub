@model FightClub.Models.Item

<section class="bg-white py-4">
    <div class="container">
        <div class="row">
            <!-- Item Image -->
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="" alt="@Model.Name" class="img-fluid rounded" />
            </div>

            <!-- Item Details -->
            <div class="col-lg-6 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="mb-2">@Model.Name</h1>
                    <h5 class="text-muted mb-3">@Model.ItemType.ToString()</h5>

                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Attack:</strong> @Model.StatAttack</p>
                    <p><strong>Defense:</strong> @Model.StatDefense</p>
                    <p><strong>HP:</strong> @Model.StatHP</p>
                    <p><strong>Price:</strong> @Model.Price gold</p>
                </div>

                <div class="mt-3">
                    <form asp-controller="Basket" asp-action="AddToBasket" method="post">
                        <input type="hidden" name="itemId" value="@Model.ItemId" />
                        <button type="submit" class="btn btn-success btn-lg">Add to Basket</button>
                        <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
