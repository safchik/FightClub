@model IEnumerable<FightClub.Models.BasketItem>

@{
    ViewData["Title"] = "Basket";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Error"]
    </div>
}

<h2>Your Basket</h2>

@if (!Model.Any())
{
    <p>Your basket is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Item.Name</td>
                <td>@item.Item.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <form asp-controller="Basket" asp-action="Remove" method="post">
                        <input type="hidden" name="basketItemId" value="@item.BasketItemId" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a asp-controller="Market" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>

        <form asp-controller="Basket" asp-action="Checkout" method="post">
            <button type="submit" class="btn btn-success">Checkout</button>
        </form>
    </div>
}

