@model IEnumerable<FightClub.Models.BasketItem>

@{
    ViewData["Title"] = "Basket";
}

<div class="container mt-4">
    <h2 class="mb-3">Your Basket</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">Your Basket is empty.</p>
    } 
    else
    {
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <form asp-controller="Basket" asp-action="Remove" method="post">
                            <input type="hidden" name="basketItemId" value="@item.BasketItemId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="text-end">
            <form asp-controller="Basket" asp-action="Checkout" method="post">
                <button type="submit" class="btn btn-success">Checkout</button>
            </form>
        </div>
    }
</div>
